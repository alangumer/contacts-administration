<h1>Import Contacts</h1>

<!-- notice -->
<%= flash[:notice] %>

<!-- import form -->
<%= form_tag import_contacts_path, multipart: true, class: "form-inline" do %>
  <div class="form-group">
    <%= file_field_tag :file %>
  </div>
  <%= submit_tag "Import", class: "btn btn-default" %>
<% end %>

<h1>Contacts</h1>
<!-- add react component-->
<%= react_component('Contacts', contacts: @contacts) %>